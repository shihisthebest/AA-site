<%- include("partials/header") -%>

<img src="images/porg-header.png" class="title-image" alt="">
<h2 class="quiz-title">What's Your Current Porg Mood?</h2>

<form class="" action="/porg" method="post">
  <div class="form-check">
    <h3>What's your spirit animal (besides porgs)?</h3>
    <input class="form-check-input" type="radio" name="selection" value="awkward" checked>
    <label class="form-check-label">
      Giraffe
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="selection" value="affectionate">
    <label class="form-check-label">
      Bunny
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="selection" value="polite">
    <label class="form-check-label">
      Turkey
    </label>
  </div>
  <button class="porg-button" type="submit" name="button">Tell My Porg-tune!</button>
</form>


<%- include("partials/footer") -%>
